<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/bg_home"
        android:scaleType="centerCrop"/>
    <ImageView
        android:background="@drawable/click_idle_round"
        android:id="@+id/btn_info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_info"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_2"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="@dimen/margin_2"
        android:fontFamily="@font/montserrat_bold"
        android:text="Culturefluent"
        android:textColor="#F2012901"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_info" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito"
        android:lineSpacingExtra="0sp"
        android:text="@string/home_desc"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv1"
        app:layout_constraintStart_toStartOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <ImageView
        android:id="@+id/btn_classifyobj"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_encyclopedia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/click_white_curve"
        android:layout_marginBottom="12dp"
        android:src="@drawable/bg_btn_classifyobj"
        android:layout_marginHorizontal="@dimen/margin_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/nunito"
        android:gravity="center_vertical"
        android:text="Classify Object"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_classifyobj"
        app:layout_constraintEnd_toEndOf="@+id/btn_classifyobj"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_classifyobj"
        app:layout_constraintTop_toTopOf="@+id/btn_classifyobj" />

    <ImageView
        android:id="@+id/btn_encyclopedia"
        android:layout_width="0dp"
        android:clickable="true"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/click_white_curve"
        android:src="@drawable/bg_btn_ency"
        android:layout_marginBottom="@dimen/margin_2"
        android:layout_marginHorizontal="@dimen/margin_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/nunito"
        android:gravity="center_vertical"
        android:text="Encyclopedia"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_encyclopedia"
        app:layout_constraintEnd_toEndOf="@+id/btn_encyclopedia"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_encyclopedia"
        app:layout_constraintTop_toTopOf="@+id/btn_encyclopedia" />


</androidx.constraintlayout.widget.ConstraintLayout>